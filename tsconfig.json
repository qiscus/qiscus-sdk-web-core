{
  "include": ["src"],
  "exclude": ["**/*.test.ts", "lib", "lib-esm", "dist", "node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "allowJs": true,
    "checkJs": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "declarationDir": "./types",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  }
}
